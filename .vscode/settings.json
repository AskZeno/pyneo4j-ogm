{
  "python.testing.pytestArgs": [
    "pyneo4j_ogm",
    "tests",
    "--asyncio-mode=auto",
    "--cov",
    "--cov-report=html:tests/coverage",
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "markdownlint.config": {
    "MD024": false,
    "MD033": false,
    "MD039": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    ".pytest_cache": true,
    ".neo4j_data": true,
    ".coverage": true
  }
}
